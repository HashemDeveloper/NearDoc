<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.ramotion.fluidslider.FluidSlider
        android:id="@+id/seek_bar_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:elevation="2dp"
        app:duration="@android:integer/config_mediumAnimTime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:size="small"
        />

    <LinearLayout
        android:id="@+id/seek_bar_dialog_bt_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/seek_bar_layout_id"
        android:layout_marginTop="@dimen/padding_16dp"
        android:gravity="end"
        android:padding="@dimen/padding_16dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/seekbar_cancel_bt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginRight="@dimen/padding_16dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/blue_gray_400"
            android:text="@android:string/cancel"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/seekbar_ok_bt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            android:textColor="@color/blue_gray_400"
            android:text="@android:string/ok"
            />
    </LinearLayout>
</RelativeLayout>
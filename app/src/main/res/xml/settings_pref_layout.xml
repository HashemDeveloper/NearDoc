<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:layout="@xml/pref_heading_one"
        app:allowDividerBelow="true"
        >
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefSignInSecKey"
            app:layout="@layout/pref_credential_layout"
            android:selectable="true"
            />
        <com.project.neardoc.view.widgets.NotificationSwitchPref
            android:key="notificationSwitchPref"
            android:title="Notification"
            android:icon="@drawable/ic_notifications_on_gray600_24dp"
            android:defaultValue="true"
            app:singleLineTitle="true"
            app:iconSpaceReserved="true"
            app:allowDividerBelow="true"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="searchPrefCategory"
        android:layout="@xml/pref_heading_two"
        app:allowDividerAbove="true"
        >
        <com.project.neardoc.view.widgets.CustomSwitchPreference
            android:key="prefEnableCurrentLocationKey"
            android:title="Enable Current Location"
            android:icon="@drawable/ic_location_gray600_24dp"
            android:defaultValue="true"
            app:singleLineTitle="true"
            app:iconSpaceReserved="true"
            app:allowDividerAbove="true"
            />
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefDistanceKey"
            android:layout="@layout/pref_set_radii_layout"
            android:selectable="true"
            app:allowDividerAbove="true"
            />
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefSetLimitKey"
            android:layout="@layout/pref_set_limit_layout"
            app:selectable="true"
            app:allowDividerAbove="true"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="helpAndSupport"
        android:layout="@xml/pref_heading_three"
        app:allowDividerAbove="true"
        >
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefContactUsKey"
            android:layout="@layout/pref_contact_us_layout"
            android:selectable="true"
            />
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefRateKey"
            android:layout="@layout/pref_rate_neardoc_layout"
            android:selectable="true"
            app:allowDividerAbove="true"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@xml/pref_heading_four"
        app:allowDividerAbove="true"
        >
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefTermsAndConditionKey"
            android:layout="@layout/pref_terms_cond_layout"
            android:selectable="true"
            app:allowDividerAbove="true"
            />
        <com.project.neardoc.view.widgets.CustomPreference
            android:key="prefPrivacyPolicyKey"
            android:layout="@layout/pref_privacy_policy_layout"
            android:selectable="true"
            app:allowDividerAbove="true"
            />
    </PreferenceCategory>
</PreferenceScreen>